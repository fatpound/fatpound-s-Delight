{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "clang-base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "intel-base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "icpx"
            }
        },
        {
            "name": "clang-debug",
            "inherits": "clang-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/clang-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "intel-debug",
            "inherits": "intel-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/intel-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "intel-release",
            "inherits": "intel-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/intel-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "intel-debug",
            "configurePreset": "intel-debug",
            "jobs": 4
        },
        {
            "name": "intel-release",
            "configurePreset": "intel-release",
            "jobs": 4
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug",
            "jobs": 4
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release",
            "jobs": 4
        }
    ]
}