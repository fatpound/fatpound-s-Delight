{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "clang-base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/CMakeSettings.cmake"
            }
        },
        {
            "name": "intel-base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "icpx",
                "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/CMakeSettings.cmake"
            }
        },
        {
            "name": "clang-debug",
            "inherits": "clang-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/CMakeSettings_Debug.cmake"
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/clang-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/CMakeSettings_Release.cmake"
            }
        },
        {
            "name": "intel-debug",
            "inherits": "intel-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/intel-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/CMakeSettings_Debug.cmake"
            }
        },
        {
            "name": "intel-release",
            "inherits": "intel-base",
            "hidden": false,
            "binaryDir": "${sourceDir}/build/intel-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/CMakeSettings_Release.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "intel-debug",
            "configurePreset": "intel-debug",
            "jobs": 8
        },
        {
            "name": "intel-release",
            "configurePreset": "intel-release",
            "jobs": 8
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug",
            "jobs": 8
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release",
            "jobs": 8
        }
    ]
}